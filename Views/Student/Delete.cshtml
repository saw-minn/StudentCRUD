@model Student

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Student</h2>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="StudentID">StudentId</label>
            <input type="text" class="form-control mb-3" asp-for="StudentID" placeholder="Enter Id">
            <span asp-validation-for="StudentID" class=" alert-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
            <span asp-validation-for="Name" class=" alert-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Address">Address</label>
            <input type="text" class="form-control mb-3" asp-for="Address" placeholder="Enter Address">
            <span asp-validation-for="Address" class=" alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Phone">Phone</label>
            <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Phone">
            <span asp-validation-for="Phone" class=" alert-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="Class">Class</label>
            <input type="text" class="form-control" asp-for="Class" placeholder="Enter Class">
            <span asp-validation-for="Class" class=" alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Course">Course</label>
            <input type="text" class="form-control mb-3" asp-for="Course" placeholder="Enter Course">
            <span asp-validation-for="Course" class=" alert-danger"></span>
        </div>
    </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


